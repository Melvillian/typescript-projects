{
  "name": "template-typescript-monorepo",
  "version": "1.6.0",
  "private": true,
  "description": "",
  "type": "module",
  "main": "index.js",
  "packageManager": "bun@1.3.3",
  "scripts": {
    "build": "bun --filter './packages/*' build && bun --filter './apps/*' build",
    "start": "bun run start:cli",
    "start:cli": "bun --filter cli --elide-lines=0 start",
    "start:api": "bun --filter api start",
    "clean": "rimraf dist packages/**/dist apps/**/dist",
    "clean:all": "rimraf dist node_modules packages/**/node_modules packages/**/dist apps/**/node_modules apps/**/dist",
    "lint:check": "eslint .",
    "lint": "eslint . --fix",
    "typecheck": "bun --filter '*' typecheck",
    "format": "prettier --write .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "cloc": "bunx cloc * --exclude-dir=node_modules,dist,.next,build",
    "depcheck": "bunx depcheck"
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "apps/*"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^20.19.25",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^9.1.2",
    "eslint-import-resolver-typescript": "^3.10.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-unused-imports": "^4.3.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.47.0",
    "vinxi": "^0.5.8",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "dependencies": {
    "rimraf": "^6.1.2"
  }
}
